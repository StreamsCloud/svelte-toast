{
  "name": "@zerodevx/svelte-toast",
  "version": "0.9.3",
  "description": "Simple elegant toast notifications",
  "author": "Jason Lee <jason@zerodevx.com>",
  "scripts": {
    "dev": "vite dev",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "format": "prettier --plugin-search-dir . --write .",
    "lint": "prettier --plugin-search-dir . --check . && eslint . && npm run check",
    "test": "playwright test",
    "prepublishOnly": "echo 'Did you mean to publish `./package/`, instead of `./`?' && exit 1",
    "build": "zx build.mjs",
    "package": "zx build.mjs --packageOnly"
  },
  "peerDependencies": {
    "svelte": "^3.57.0"
  },
  "devDependencies": {
    "@fontsource-variable/inter": "^5.0.3",
    "@playwright/test": "^1.35.1",
    "@sveltejs/adapter-static": "^2.0.2",
    "@sveltejs/kit": "^1.20.4",
    "@sveltejs/package": "^2.0.2",
    "@sveltejs/vite-plugin-svelte": "^2.4.1",
    "autoprefixer": "^10.4.14",
    "camelcase": "^7.0.1",
    "daisyui": "^3.1.5",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "is-port-reachable": "^4.0.0",
    "postcss": "^8.4.24",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "prismjs": "^1.29.0",
    "svelte-check": "^3.4.3",
    "svelte-preprocess": "^5.0.4",
    "tailwindcss": "^3.3.2",
    "terser": "^5.18.1",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3",
    "vite": "^4.3.9"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "svelte": "./index.js"
    },
    "./dist": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "svelte": "./index.js",
  "jsdelivr": "./dist/index.umd.js",
  "files": [
    "**/*"
  ],
  "license": "ISC",
  "repository": "github:zerodevx/svelte-toast",
  "homepage": "https://zerodevx.github.io/svelte-toast/",
  "keywords": [
    "svelte",
    "vanillajs",
    "toast",
    "notifications"
  ]
}
